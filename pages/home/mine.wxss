/* 个人中心（我的） */

@keyframes userinfo-avatar-ani{
	0%{
		box-shadow:0px 0px 0px 0px #ccc;
	}
	100%{
		box-shadow:0px 0px 40px 0px #ccc;
	}
}

@keyframes userinfo-outter-ani{
	0%{
		border: 1px solid rgba(255, 255, 255, 0.0);
	}
	100%{
		border: 1px solid rgba(255, 255, 255, 0.15);
	}
}

.userinfo-avatar {
	overflow: hidden;
	width: 100rpx;
	height: 100rpx;
	border-radius: 50%;
	background-color: #f0f0f0;
	animation: userinfo-avatar-ani 3s ease 0s infinite alternate forwards;
}
.userinfo-avatar-outter{
	display: inline-block;
	padding: 10px;
	border-radius: 50%;
	overflow: hidden;
	background-color: rgba(255, 255, 255, 0.05);
	animation: userinfo-outter-ani 3s ease 0s infinite alternate forwards;
}

.btn-list-icon{
	display: inline-block;
	width: 2.5rem;
	height: 2.5rem;
	margin-bottom: 5px;
}

.item-list-icon{
	display: inline-block;
	width: 1.5rem;
	height: 1.5rem;
}