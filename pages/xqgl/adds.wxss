.order-pic-box{
	position: relative;
	overflow: hidden;
	width: calc(33.33333333%  - 2px);
	margin:3px 0 0 0;
	background-color: #f0f0f0;
}
.order-pic-box:nth-child(1){ margin: 0 !important}
.order-pic-box:nth-child(2){ margin: 0 3px !important}
.order-pic-box:nth-child(3){ margin: 0 !important}
.order-pic-box:nth-child(3n + 2){ margin:3px 3px 0 3px}
.order-pic-box > text{
	display: block;
	padding-top: 100%;
}
.order-pic-box > image{
	position: absolute;
	top:0;
	left:0;
	z-index: 1;
	width: 100%;
	height: 100%;
}
.order-pic-box > image.adds-btn{
	top:30%;
	left:30%;
	width: 40%;
	height: 40%;
	opacity: 0.5;
}
.order-pic-box > label{
	display: inline-block;
	position: absolute;
	top:50%;
	left:0;
	width: 100%;
	height: auto;
	text-align: center;
	transform: translate(0,-50%);
	z-index: 2;
}