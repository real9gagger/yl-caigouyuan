/* 订单详情页 */
.group-panel-box{
	background-color: #fff;
	margin-bottom: 0.5rem;
	border-radius: 10px;
	overflow: hidden;
	padding: 0.5rem 0;
}
.group-panel-box > view{
	padding: 0.5rem 1rem;
}
.group-panel-box > view:active{
	background-color: #dfdfdf;
}

.order-pic-box{
	position: relative;
	overflow: hidden;
	width: calc(33.33333333%  - 2px);
	margin:3px 0 0 0;
}
.order-pic-box:nth-child(1){ margin: 0 !important}
.order-pic-box:nth-child(2){ margin: 0 3px !important}
.order-pic-box:nth-child(3){ margin: 0 !important}
.order-pic-box:nth-child(3n + 2){ margin:3px 3px 0 3px}
.order-pic-box > text{
	display: block;
	padding-top: 100%;
}
.order-pic-box > image{
	position: absolute;
	top:0;
	left:0;
	z-index: 1;
	width: 100%;
	height: 100%;
}