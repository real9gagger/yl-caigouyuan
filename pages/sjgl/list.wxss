.driver-list-box{
	width: 100vw;
	height: 100vh;
	background-color: #f0f0f0;
	overflow: hidden;
}

.driver-pic-box{
	overflow: hidden;
	border-radius: 50%;
	width: 60px;
	height: 60px;
	margin-right: 1rem;
	background-color: #f0f0f0;
}
.driver-pic-box.imgcount1 > image{
	display: block;
	width: 100%;
	height: 100%;
}
.driver-pic-box.imgcount2 > image{
	display: block;
	width: 100%;
	height: 50%;
}
.driver-pic-box.imgcount3 > image{
	display: inline-block;
	width: 50%;
	height: 50%;
}
.driver-pic-box.imgcount3 > image:last-child{
	width: 100%;
}
.driver-pic-box.imgcount4 > image{
	display: inline-block;
	width: 50%;
	height: 50%;
}