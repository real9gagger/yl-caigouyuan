/* 底部组件 */
.ddzj-footer-box{
	position: fixed;
	bottom: 0;
	left:0;
	right:0;
	z-index:99;
	background-color: #f6f6f6;
	color: #333;
}

.ddzj-radial-box{
	position: absolute;
	left: calc(50% - 3rem);
	top: -2.5rem;
	z-index: 99;
	padding: 1rem;
	border-radius:50%;
	background-position: center center;
	background-size: 100% 100%;
	background-image: linear-gradient(
		180deg,
		transparent 0,
		transparent 2.5rem,
		rgba(0,0,0,0.1) 2.5rem,
		rgba(0,0,0,0.1) 100%
	);
	opacity: 0.5;
}
.ddzj-radial-box.is-actived{
	opacity: 1.0;
}

.ddzj-radial-box > .inner-btn{
	width: 4rem;
	height: 4rem;
	border-radius: 50%;
	background-color: #1ba4f0;
}

.tab-color{
	color: #1ba4f0;
}